<h1>New Cat Form</h1>

<form action="<%= cats_url %>" method="POST">
  <label for="name">Name:</label>
  <input id="name" type="text" name="cat[name]">
  <br>
  <input type="radio" name="cat[sex]" id="M" value="M">
  <label for="M">Male</label>
  <input type="radio" name="cat[sex]" id="F" value="F">
  <label for="F">Female</label>
  <br>
 
  <label for="color">Color:</label>
  <select name="cat[color]" id="color">
    <% Cat::CAT_COLORS.each do |color| %>
      <option value="<%= color %>"><%= color %></option>
    <% end %>
  </select>
  <!-- name is the key into the params and value is what the values are -->
  
  <br>

  <label for="birth_date">Birthday:</label>
  <input id="birth_date" type="text" name="cat[birth_date]">


  <br>

  <label for="description">description:</label>
  <input id="description" type="text" name="cat[description]">
  <br>
  <input type="submit" value="Create Cat">
</form>